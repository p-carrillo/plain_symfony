{% extends 'base.html.twig' %}

{% block title %}Symfony Project{% endblock %}

{% block body %}
    <div style="min-height:100vh;display:flex;align-items:center;justify-content:center;background:linear-gradient(135deg,#667eea 0%,#764ba2 100%);font-family:'Segoe UI',Arial,sans-serif;">
        <div style="background:white;padding:3rem 2.5rem 2.5rem 2.5rem;border-radius:1.5rem;box-shadow:0 8px 32px 0 rgba(31,38,135,0.37);max-width:400px;width:100%;text-align:center;">
            <img src="https://symfony.com/logos/symfony_black_03.png" alt="Symfony Logo" style="width:80px;margin-bottom:1.5rem;">
            <h1 style="margin-bottom:0.5rem;color:#333;font-size:2rem;font-weight:700;">Symfony is running!</h1>
            <p style="color:#666;margin-bottom:2rem;">Your Symfony environment with Docker and Nginx is ready.</p>
            {% if dbStatus %}
                <div style="background:#e6ffed;color:#276749;padding:0.75rem 1rem;border-radius:0.5rem;margin-bottom:1rem;font-weight:600;">
                    <svg style="vertical-align:middle;margin-right:0.5rem;" width="20" height="20" fill="none" stroke="#276749" stroke-width="2" viewBox="0 0 24 24"><path d="M5 13l4 4L19 7"/></svg>
                    Database connection successful!
                </div>
            {% else %}
                <div style="background:#ffe6e6;color:#c53030;padding:0.75rem 1rem;border-radius:0.5rem;margin-bottom:1rem;font-weight:600;">
                    <svg style="vertical-align:middle;margin-right:0.5rem;" width="20" height="20" fill="none" stroke="#c53030" stroke-width="2" viewBox="0 0 24 24"><circle cx="12" cy="12" r="10"/><line x1="15" y1="9" x2="9" y2="15"/><line x1="9" y1="9" x2="15" y2="15"/></svg>
                    Database connection error:<br>{{ error }}
                </div>
            {% endif %}
            <div style="margin-top:2rem;font-size:0.95rem;color:#888;">
                <p>Powered by Symfony 7, Docker, Nginx and MariaDB.</p>
                <p style="margin-top:1rem;">
                    <a href="https://symfony.com/doc/current/index.html" target="_blank" style="color:#764ba2;text-decoration:none;font-weight:600;">Symfony Documentation</a>
                </p>
            </div>
        </div>
    </div>
{% endblock %}
